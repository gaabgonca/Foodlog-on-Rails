<% content_for :title do %>
  Foodlog &ndash; <%= DateTime.now.to_s(:nice_date) %>
<% end %>
<div class="columns mt-6 is-centered">
  <% @entries.each do |entry| %>
    <div class="column is-one-quarter">
      <div class="card">
        <header class="card-header">
          <p class="card-header-title"> <%= entry.meal_type %> </p>
        </header>
        <div class="card-content">
          <div class="content">
            <p><span class="has-text-weight-bold"><%= entry.calories %> calories</span>
            </p>
            <p><span class="has-text-weight-bold"><%= entry.proteins %> grams of proteins</span>
            </p>
            <p><span class="has-text-weight-bold"><%= entry.carbohidrates %> grams of carbohidrates</span>
            </p>
            <p><span class="has-text-weight-bold"><%= entry.fats %> grams of fats</span>
            </p>
            <p class="italic">Logged <%= time_ago_in_words(entry.created_at) =%> ago</p>
          </div>
        </div>
        <div class="card-footer">
          <%= link_to 'Show', entry, class:"card-footer-item" %>
          <%= link_to 'Edit', edit_entry_path(entry), class:"card-footer-item" %>
          <%= link_to 'Destroy', entry, class:"card-footer-item", method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
      </div>
    </div>
  <% end %>
</div>
